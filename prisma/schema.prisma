// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum UserRole {
  USER
  ADMIN
}

enum AIProvider {
  AZURE_OPENAI
  AZURE_FOUNDRY
}

model User {
  id            String         @id @default(uuid())
  email         String         @unique
  password      String
  name          String?
  role          UserRole       @default(USER)
  isActive      Boolean        @default(true)
  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt
  conversations Conversation[]
  usageLogs     UsageLog[]

  @@map("users")
}

model AIModel {
  id                    String         @id @default(uuid())
  nameDisplay           String
  provider              AIProvider     @default(AZURE_OPENAI)
  endpointUrl           String
  deploymentOrModelName String
  apiKeyEnvVar          String         @default("AZURE_OPENAI_API_KEY") // Name of env variable
  temperature           Float          @default(0.7)
  maxTokens             Int            @default(2000)
  isActive              Boolean        @default(true)
  createdAt             DateTime       @default(now())
  updatedAt             DateTime       @updatedAt
  conversations         Conversation[]
  usageLogs             UsageLog[]

  @@map("ai_models")
}

model Conversation {
  id        String    @id @default(uuid())
  title     String    @default("New Chat")
  userId    String
  user      User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  modelId   String?
  model     AIModel?  @relation(fields: [modelId], references: [id], onDelete: SetNull)
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  messages  Message[]

  @@index([userId])
  @@map("conversations")
}

model Message {
  id             String       @id @default(uuid())
  conversationId String
  conversation   Conversation @relation(fields: [conversationId], references: [id], onDelete: Cascade)
  role           String // "user" or "assistant"
  content        String       @db.Text
  tokensUsed     Int?
  createdAt      DateTime     @default(now())

  @@index([conversationId])
  @@map("messages")
}

model UsageLog {
  id              String   @id @default(uuid())
  userId          String
  user            User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  modelId         String?
  model           AIModel? @relation(fields: [modelId], references: [id], onDelete: SetNull)
  promptTokens    Int
  completionTokens Int
  totalTokens     Int
  createdAt       DateTime @default(now())

  @@index([userId])
  @@index([modelId])
  @@index([createdAt])
  @@map("usage_logs")
}
